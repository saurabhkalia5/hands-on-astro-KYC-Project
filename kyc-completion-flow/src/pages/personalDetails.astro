---
import KycFlowLayout from "../layouts/KycFlowLayout.astro"
---

<KycFlowLayout>
<div class="personal-details-form">
    <div class="form-container">
        <h2>Marital Status</h2>
        <div class="field">
          <div class="radio-group">
            <label><input type="radio" name="maritalStatus" value="Single" checked /> Single</label>
            <label><input type="radio" name="maritalStatus" value="Married" /> Married</label>
          </div>
        </div>
        <div class="field">
          <label for="fathersName">Father’s Name</label>
          <input type="text" id="fathersName" class="text-input" placeholder="Enter father's name here" />
        </div>
        <div class="field">
          <label for="mothersName">Mother’s Name</label>
          <input type="text" id="mothersName" class="text-input" placeholder="Enter mother's name here" />
        </div>
        <div class="field">
          <label for="email">Email</label>
          <input type="text" id="email" class="text-input" placeholder="@gmail.com" />
          <div class="email-domains">
            <button class="active">@gmail.com</button>
            <button>@yahoo.com</button>
            <button>@yahoo.co.in</button>
            <button>@rediffmail.com</button>
          </div>
          <small style="color: gray; font-size: 0.9rem;">
            You will receive portfolio statements on this email id
          </small>
        </div>
        <h2>Annual Income</h2>
        <div class="income-options">
          <label><input type="radio" name="annualIncome" value="Below 1 Lakh" checked /> Below 1 Lakh</label>
          <label><input type="radio" name="annualIncome" value="1-5 Lakhs" /> 1-5 Lakhs</label>
          <label><input type="radio" name="annualIncome" value="5-10 Lakhs" /> 5-10 Lakhs</label>
          <label><input type="radio" name="annualIncome" value=">25 Lakhs" /> >25 Lakhs</label>
        </div>
        <div class="submit-buttons">
          <a href="/uploadDocuments"><button class="next-button">Next</button></a>
          <a href="/uploadDocuments"></a><button class="skip-button">Skip for Now</button></a>
        </div>
      </div>
</div>
</KycFlowLayout>

<style>
    .personal-details-form{
        /* padding: 2%; */
        /* padding: 0% 2% 2% 2%; */
        height: 100%;
    }
    
      .form-container {
        background: #fff;
        border-radius: 10px;
        padding: 20px;
        width: 90%;
        max-width: 400px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      h2 {
        font-size: 1.5rem;
        color: #003366;
        margin-bottom: 20px;
      }

      .field {
        margin-bottom: 15px;
      }

      .field label {
        font-size: 1rem;
        color: #003366;
        display: block;
        margin-bottom: 5px;
      }

      .radio-group {
        display: flex;
        gap: 10px;
      }

      .radio-group input {
        margin-right: 5px;
      }

      .text-input {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
      }

      .email-domains {
        display: flex;
        gap: 10px;
        margin-top: 10px;
      }

      .email-domains button {
        border: 1px solid #003366;
        background: #fff;
        color: #003366;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
      }

      .email-domains button.active {
        background: #003366;
        color: #fff;
      }

      .radio-group,
      .income-options {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      .income-options label {
        display: flex;
        align-items: center;
      }

      .submit-buttons {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
      }

      .next-button {
        background: #003366;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        width: 100%;
      }

      .skip-button {
        background: none;
        border: none;
        color: #666;
        text-decoration: underline;
        cursor: pointer;
      }
    


</style>